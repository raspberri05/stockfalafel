    "babel-preset-stage-1": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^4.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.18.2",
    "bodymen": "^1.1.1",
    "cheerio": "^1.0.0-rc.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-force-ssl": "^0.3.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.13.14",
    "mongoose-create-unique": "^0.4.4",
    "mongoose-keywords": "^0.4.1",
    "morgan": "^1.10.0",
